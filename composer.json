{
  "name": "silverorange/xml_rpc_ajax",
  "description": "Client-side XML-RPC framework.",
  "type": "library",
  "keywords": [ "xmlrpc", "ajax" ],
  "homepage": "https://github.com/silverorange/xml-rpc-ajax",
  "license": "LGPL-2.1",
  "authors": [
    {
      "name": "Michael Gauthier",
      "email": "mike@silverorange.com"
    },
    {
      "name": "Nathan Fredrickson",
      "email": "nathan@silverorange.com"
    },
    {
      "name": "Nick Burka",
      "email": "nick@silverorange.com"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.silverorange.com",
      "only": ["silverorange/*"]
    }
  ],
  "autoload": {
    "psr-0": {
      "XML_RPCAjax" : ""
    }
  },
  "require": {
    "php": ">=8.2",
    "silverorange/swat": "^7.0.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "phpstan/phpstan": "^1.12",
    "rector/rector": "^1.2",
    "silverorange/php-coding-tools": "^1.4",
    "silverorange/xml_rpc2": "^2.0"
  },
  "scripts": {
    "phpcs": "./vendor/bin/php-cs-fixer check --config=./.php-cs-fixer.php -v",
    "phpcs:fix": "./vendor/bin/php-cs-fixer fix --config=./.php-cs-fixer.php -v",
    "phpstan": "./vendor/bin/phpstan analyze",
    "rector": "./vendor/bin/rector --dry-run",
    "rector:fix": "./vendor/bin/rector"
  },
  "config": {
    "sort-packages": true
  }
}
